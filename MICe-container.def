    # install minc-stuffs (automatically installs Pyminc)
    (git clone --recursive https://github.com/Mouse-Imaging-Centre/minc-stuffs.git
     cd minc-stuffs
     ./autogen.sh
     ./configure --with-minc2 --with-build-path=/usr/local
     make
     make install
     pip3 install .
     cd ..
     rm -rf minc-stuffs)

    # install pyezminc
